<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

</LinearLayout>
    <LinearLayout
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xn_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="学年"
            android:textColor="@color/blue"
            android:gravity="center"
            android:id="@+id/textView3"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xns"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xq_layout"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="学期"
        android:textColor="@color/blue"
        android:gravity="center"
        android:id="@+id/textView4" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xqs"
        android:spinnerMode="dropdown"/>
</LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dis_test"
            android:id="@+id/grade_list"
            android:layout_below="@+id/do_search" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始查询"
        android:background="@drawable/white_bg"
        android:textColor="@color/darkgreen"
        android:id="@+id/do_search"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA(必修)"
        android:background="@drawable/white_bg"
        android:textColor="@color/darkgreen"
        android:id="@+id/GPA"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4.0"
        android:id="@+id/show_gpa"
        android:gravity="center"
        android:background="@drawable/edit_shape"
        android:layout_above="@+id/grade_list"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/GPA" />


</RelativeLayout>